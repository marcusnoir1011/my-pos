generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  admin
  cashier
}

model User {
  id            Int             @id @default(autoincrement())
  name          String
  email         String          @unique
  password      String
  role          Role
  createdAt     DateTime        @default(now())

  sales         Sale[]
  refreshToken  RefreshToken[]

  @@map("users")
}

model Product {
  id            Int       @id @default(autoincrement())
  name          String
  sku           String?   @unique
  price         Int
  stockQuantity Int
  isActive      Boolean   @default(true)
  createdAt     DateTime  @default(now())

  saleItems     SaleItem[]

  @@map("products")
}

model Sale {
  id          Int         @id @default(autoincrement())
  cashierId   Int
  totalAmount Int
  createdAt   DateTime    @default(now())

  items       SaleItem[]

  cashier     User        @relation(fields: [cashierId], references: [id])

  @@index([cashierId])
  @@map("sales")
}

model SaleItem {
  id        Int     @id @default(autoincrement())
  saleId    Int
  productId Int
  quantity  Int
  unitPrice Int
  subtotal  Int

  sale      Sale    @relation(fields: [saleId], references: [id])
  product   Product @relation(fields: [productId], references: [id])

  @@index([saleId])
  @@index([productId])
  @@map("sale_items")
}

model RefreshToken {
  id        Int       @id @default(autoincrement())
  token     String    @unique
  userId    Int
  expiresAt DateTime
  isRevoked Boolean   @default(false)
  createdAt DateTime  @default(now())

  user      User      @relation(fields: [userId], references: [id])

  @@index([userId])
  @@map("refresh_tokens")
}